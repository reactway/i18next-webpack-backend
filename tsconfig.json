{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2016",
        "outDir": "dist",
        "rootDir": "src",
        "jsx": "react",
        "noUnusedLocals": true,
        "declaration": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmitHelpers": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "types": ["webpack-env"]
    },
    "exclude": ["dist"]
}